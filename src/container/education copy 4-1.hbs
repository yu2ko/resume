<div>
    {{#with main}}
    <main>
        <section>
            {{> title big=true data='My education'}}
            <ul>
                {{#each education}}
                <li>
                    {{name}}
                    {{#unless isEnd}} (ще в процесі) {{/unless}}
                </li>
                {{/each}}
            </ul>
        </section>
        <section>
            {{> title data='My certificates'}}
            {{!-- big=false можно не писать, так как "false"=значит 0
            {{> title big=false data='My certificates'}} --}}
            <ul>
                {{#each certificates}}
                <li>
                    {{name}} ({{id}})
                </li>
                {{/each}}
            </ul>
        </section>
    </main>
    {{/with}}
</div>