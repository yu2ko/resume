{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
    {{#with main}}
    <main>
        <section>
            {{> title big=true data='Work history'}}
            <div>
                <ul>
                    {{#each works}}
                    <li>
                        <div>{{position}} </div>

                        <br>

                        <div>
                            {{duration.from}} -
                            {{#if duration.to}}
                            {{duration.to}}
                            {{else}}
                            (досі працюємо)
                            {{/if}}
                        </div>

                        <br>

                        <div>{{> link text=company.name href=company.url blank=true noLine=true}}</a></div>
                        {{!-- <div><a href="{{company.url}}" target="_blank">{{company.name}}</a></div> --}}

                        <br>
                        <br>

                        <div><strong>Projects ({{projectAmount}})</strong></div>

                        <br>

                        <ul>
                            {{#each projects}}
                            <li>
                                <div>{{> link text=name href=url blank=true noLine=true}}</a></div>


                            </li>
                            {{/each}}
                        </ul>

                    </li>
                    <br>
                    {{/each}}
                </ul>
            </div>
        </section>
    </main>
    {{/with}}
</div>

