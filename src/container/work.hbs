{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
    {{#with main}}
        <main>
            <section>
                {{> title big=true data='Work history'}}
                <div>
                    <ul>
                        {{#each works}}
                            <li>
                                <div>{{position}} </div>

                                <br>

                                <div>
                                    {{duration.from}} -
                                    {{#if duration.to}}
                                        {{duration.to}}
                                    {{else}}
                                        (досі працюємо)
                                    {{/if}}
                                </div>

                                <br>

                                <div>
                                    {{#if company.url}}
                                        {{> link text=company.name href=company.url blank=true noLine=true}}</a></div>
                                    {{else}}
                                        <b>{{company.name}}</b>
                                    {{/if}}

                                <br>
                                <br>

                                <div><strong>Projects ({{projectAmount}})</strong></div>

                                <br>

                                <ul>
                                    {{#each projects}}
                                        <li>
                                            <div>{{> link text=name href=url blank=true noLine=true}}</a></div>

                                            <br>

                                            <div>
                                                {{about}}
                                            </div>

                                            <br>

                                            <div>
                                                <em>Project stack ({{stackAmount}}) </em>
                                            </div>

                                            <br>

                                            <div>
                                                <ul>
                                                    {{#each stacks}}
                                                        <li>{{name}}</li>
                                                    {{/each}}
                                                </ul>
                                            </div>

                                            <br>

                                            <div>
                                                <em>Projects award ({{awardAmount}}) </em>
                                            </div>
                                            <br>
                                            <div>
                                                <ul>
                                                    {{#each awards  }}
                                                        <li>{{name}}</li>
                                                    {{/each}}
                                                </ul>
                                            </div>
                                        </li>
                                    {{/each}}
                                </ul>
                            </li>
                            <br>
                        {{/each}}
                    </ul>
                </div>
            </section>
        </main>
    {{/with}}
</div>

